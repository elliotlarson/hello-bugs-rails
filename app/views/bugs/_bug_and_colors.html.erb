<div class="container mx-auto p-8 pt-0 text-center md:flex justify-center">
  <div class="shadow-lg bug__wrapper justify-center">
    <%= bug.svg.html_safe %>
  </div>
  <div class="bug__colors__wrapper flex md:block">
    <% @bug.color_scheme.each do |color| %>
      <div class="pt-8 pr-2 sm:pr-4 md:pt-0 md:pr-4 md:pl-8 md:pb-3">
        <div class="bg-white w-12 sm:w-16 h-12 sm:h-16 p-2 sm:p-3 shadow-md">
          <div style="background-color: <%= color %>;" class="h-full w-full">
          </div>
        </div>
        <div class="text-xs sm:text-sm text-gray-600 pt-1 text-left">
          <%= color %>
        </div>
      </div>
    <% end %>
  </div>
</div>
